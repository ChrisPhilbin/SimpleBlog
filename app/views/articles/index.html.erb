<div class="row">
  <aside class="col-md-4">
    <div class="sidebar">
      This is a sidebar... testing!
    </div>
  </aside>
  <div class="col-md-8">
      <h1>Chris Philbin's blog - Index</h1>
      
      <% if logged_in? %>
      Hello, <%= @current_user.name %> - <%= link_to 'edit your account info', edit_user_path(@current_user) %> | <%= link_to 'logout', logout_path, method: :delete %>
      <% end %>
        <% @article.each do |article| %>
          <div class="article-body">
            <strong><%= link_to "#{article.title}", article %></strong> <% if logged_in? %>[ <%= link_to 'edit', edit_article_path(article) %> ]
           [  <%= link_to 'delete', article, method: :delete, data: { confirm: "You sure?" } %> ]<% end %><br>
            <%= article.body %>
          Posted in <strong><%= article.topic %></strong><br><br>
          </div>
      <% end %>
      <div align="center">
      <%= will_paginate @article %>
      </div>
    </div>
</div>