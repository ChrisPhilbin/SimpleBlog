<%= form_with scope: :article, url: articles_path, local: true do |form| %>
<p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
</p>
<p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
</p>
<p>
    <%= form.label :topic %><br>
    <%= form.select(:topic, options_for_select([['Rants', 'Rants'], ['Tech', 'Tech'], ['Cars', 'Cars']])) %>
</p>
<p>
    <%= form.submit %>
</p>
<% end %>